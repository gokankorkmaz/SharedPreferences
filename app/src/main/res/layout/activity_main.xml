<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kodluyoruz.com.sharedpref.MainActivity">


    <CheckBox
        android:id="@+id/activity_main_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hatirla" />


    <EditText
        android:id="@+id/activity_main_etVeri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kaydedilecek_veri"
        android:paddingLeft="@dimen/paddingLeft"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/activity_main_btnKaydet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/kaydet" />

        <Button
            android:id="@+id/activity_main_btnSil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/sil" />

        <Button
            android:id="@+id/activity_main_btnKaldir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="@string/kaldir" />

        <Button
            android:id="@+id/activity_main_btnAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/_2_aktivite" />
    </LinearLayout>




</LinearLayout>
